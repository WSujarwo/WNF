<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_illustration">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_title_materi"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="QUIS"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnQuiz1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_caption_image"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="QUIS 1"
        android:textColor="@color/yellow_1"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/btnQuiz2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/titleText"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnQuiz2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/bg_caption_image"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="QUIS 2"
        android:textColor="@color/yellow_1"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnQuiz1"
        app:layout_constraintEnd_toEndOf="@+id/titleText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnQuiz1"
        app:layout_constraintTop_toTopOf="@+id/btnQuiz1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnQuiz3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_caption_image"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="QUIS 3"
        android:textColor="@color/yellow_1"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/icHome"
        app:layout_constraintEnd_toStartOf="@+id/btnQuiz4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btnQuiz1"
        app:layout_constraintTop_toBottomOf="@+id/btnQuiz1"
        app:layout_constraintVertical_bias="0.1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnQuiz4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_caption_image"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginStart="10dp"
        android:text="QUIS 4"
        android:textColor="@color/yellow_1"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnQuiz3"
        app:layout_constraintEnd_toEndOf="@+id/btnQuiz2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnQuiz3"
        app:layout_constraintTop_toTopOf="@+id/btnQuiz3" />

    <ImageView
        android:id="@+id/icHome"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_home_large" />
</androidx.constraintlayout.widget.ConstraintLayout>